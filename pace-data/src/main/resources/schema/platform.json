{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/platform.schema.json",
  "title": "Platform",
  "description": "A platform",
  "type": "object",
  "properties": {
    "uuid": {
      "description": "The unique identifier of a platform",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the platform",
      "type": "string"
    },
    "use": {
      "description": "Whether or not platform can be attached to deployments",
      "type": "boolean" 
    }
  },
  "required": ["uuid", "name", "use"]
}