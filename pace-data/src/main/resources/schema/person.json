{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/person.schema.json",
  "title": "Person",
  "description": "A person",
  "type": "object",
  "properties": {
    "uuid": {
      "description": "The unique identifier of a person",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the person",
      "type": "string"
    },
    "organization": {
      "description": "Organization person belongs to",
      "type": "string"
    },
    "position": {
      "description": "Position of the person",
      "type": "string"
    },
    "street": {
      "description": "Street person's office is located at",
      "type": "string"
    },
    "city": {
      "description": "City person's office is located in",
      "type": "string"
    },
    "state": {
      "description": "State person's office is located in",
      "type": "string"
    },
    "zip": {
      "description": "Zip code person's office is located in",
      "type": "string"
    },
    "country": {
      "description": "Country person's office is located in",
      "type": "string"
    },
    "email": {
      "description": "Person's email",
      "type": "string"
    },
    "phone": {
      "description": "Person's phone",
      "type": "string"
    },
    "use": {
      "description": "Whether or not person can be attached to deployments",
      "type": "boolean"
    },
    "orcid": {
      "description": "Person's ORCID",
      "type": "string"
    }
  },
  "required": [ "uuid", "name", "organization", "position", "use" ]
}
