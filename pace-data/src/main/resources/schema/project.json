{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/project.schema.json",
  "title": "Project",
  "description": "A project",
  "type": "object",
  "properties": {
    "uuid": {
      "description": "The unique identifier of a project",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the project",
      "type": "string"
    },
    "use": {
      "description": "Whether or not the project can be attached to deployments",
      "type": "boolean"
    }
  },
  "required": ["name", "use"]
}