{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/organization.schema.json",
  "title": "Packing Job",
  "description": "Specification for data packing job",
  "type": "object",
  "properties": {
    "temperaturePath": {
      "description": "Path to temperature files",
      "type": "string"
    },
    "biologicalPath": {
      "description": "Path to biological information files",
      "type": "string"
    },
    "otherPath": {
      "description": "Path to additional files",
      "type": "string"
    },
    "documentationPath": {
      "description": "Path to documentation files",
      "type": "string"
    },
    "calibrationDocsPath": {
      "description": "Path to calibration documentation files",
      "type": "string"
    },
    "navigationPath": {
      "description": "For mobile marine deployments only. Path to navigation files",
      "type": "string"
    },
    "sourcePath": {
      "description": "Path to source files",
      "type": "string"
    }
  }
}