{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/instrument.schema.json",
  "title": "Instrument",
  "description": "An instrument",
  "type": "object",
  "definitions": {
    "FileType": {
      "description": "A file type",
      "type": "object",
      "properties": {
        "uuid": {
          "description": "The unique identifier of a file type",
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "description": "The file type name",
          "type": "string"
        },
        "comment": {
          "description": "The file type comment",
          "type": "string"
        },
        "use": {
          "description": "Whether or not the file type can be attached to a deployment",
          "type": "boolean"
        }
      },
      "required": ["uuid", "type", "comment", "use"]
    }
  },
  "properties": {
    "uuid": {
      "description": "The unique identifier of an instrument",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the instrument",
      "type": "string"
    },
    "fileTypes": {
      "description": "The instrument's supported file types",
      "type": "array",
      "items": {
        "$ref": "#/definitions/FileType"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "use": {
      "description": "Whether or not the instrument can be attached to deployments",
      "type": "boolean"
    }
  },
  "required": ["name", "use"]
}