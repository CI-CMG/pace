{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/ship.schema.json",
  "title": "Ship",
  "description": "A ship",
  "type": "object",
  "properties": {
    "uuid": {
      "description": "The unique identifier of a ship",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the ship",
      "type": "string"
    },
    "use": {
      "description": "Whether or not the ship can be attached to deployments",
      "type": "boolean"
    }
  },
  "required": ["uuid", "name", "use"]
}