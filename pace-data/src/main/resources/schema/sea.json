{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://colorado.edu/cires/pace/sea.schema.json",
  "title": "Sea",
  "description": "A sea area",
  "type": "object",
  "properties": {
    "uuid": {
      "description": "The unique identifier of a sea area",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Name of the sea area",
      "type": "string"
    },
    "use": {
      "description": "Whether or not sea area can be attached to deployments",
      "type": "boolean" 
    }
  },
  "required": ["uuid", "name", "use"]
}